@{
    ViewData["Title"] = "Create / Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create Or Edit an Expense</h1>
</div>

<div class="container">
    <form asp-action="CreateEditResponseForm" asp-controller="Home">
    
    <input hidden class="form-control mt-4" type="number" placeholder="0" asp-for="Id" />
    <label>Value $</label>
    <input class="form-control mt-4" type="number" placeholder="0" step="0.01" asp-for="Value" />
    <label>Description</label>
    <input class="form-control mt-4" type="text" placeholder="Add a Description" asp-for="Description" />
    
    <button type="submit" class="btn btn-primary mt-4">Ok</button>

</form>
</div>